<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<!-- This configuration File providers the parameters used in the Ranger OBS Service -->
<configuration>
    <!-- obs service name,ranger admin -->
    <property>
        <name>ranger.plugin.obs.service.name</name>
        <value>obs</value>
    </property>
    <!--ranger-obs-service-->
    <property>
        <name>ranger.obs.service.rpc.address</name>
        <value>0.0.0.0:26901</value>
    </property>
    <!--ranger-obs-service status http-->
 <property>
        <name>ranger.obs.service.sts.enable</name>
        <value>true</value>
    </property>
    <property>
        <name>ranger.obs.service.status.port</name>
        <value>26900</value>
    </property>
    <!--STS--><!-- Cloud Login/Authentication Parameters For Open Telekom Cloud-->
    <property>
        <name>ranger.obs.service.sts.enable</name>
        <value>true</value>
    </property>
    <property>
        <name>ranger.obs.service.sts.provider</name>
        <value>org.apache.ranger.obs.security.STSProvider</value>
    </property>
    <property>
        <name>ranger.obs.service.sts.token.url</name>
        <value>https://iam.eu-de.otc.t-systems.com/v3/auth/tokens?nocatalog=true</value>
    </property>
    <property>
        <name>ranger.obs.service.sts.domain.name</name>
        <value>OTC0000000000100004097</value>
    </property>
    <property>
        <name>ranger.obs.service.sts.user.name</name>
        <value>rangerobs</value>
    </property>
    <property>
        <name>ranger.obs.service.sts.user.password</name>
        <value>3EAGZS1TDLBFU9UXW2NB</value>
    </property>
    <property>
        <name>ranger.obs.service.sts.securitytoken.url</name>
        <value>https://iam.eu-de.otc.t-systems.com/v3.0/OS-CREDENTIAL/securitytokens</value>
    </property>
    <property>
        <name>ranger.obs.service.sts.securitytoken.duration</name>
        <value>86400</value>
    </property>
    <!-- kerberos-->
    <!-- Kerberos principal -->
    <property>
        <name>ranger.obs.service.kerberos.principal</name>
        <value>rangerobs/hadoop@EXAMPLE.COM</value>
    </property>
    <!-- Kerberos keytab -->
    <property>
        <name>ranger.obs.service.kerberos.keytab</name>
        <value>/etc/security/keytabs/rangerobs.keytab</value>
    </property>

    <!--Delegation Token-->
    <!-- delegation token service name-->
    <property>
        <name>ranger.obs.service.dt.service.name</name>
        <value>0.0.0.0:26901</value>
    </property>
    <!-- DelegationToken  -->
    <property>
        <name>ranger.obs.service.dt.renew-interval</name>
        <value>86400000</value>
    </property>
    <!-- DelegationToken -->
    <property>
        <name>ranger.obs.service.dt.max-lifetime</name>
        <value>604800000</value>
    </property>
</configuration>
